<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="com.starterkit.views"
            class="com.starterkit.views.views.SampleView"
            id="com.starterkit.views.views.SampleView">
      </view>
      <view
            class="com.starterkit.views.ViewPart1"
            id="com.starterkit.views.view1"
            name="My View"
            restorable="true">
      </view>
      <view
            class="com.starterkit.views.SomeView"
            id="com.starterkit.views.SomeView"
            name="Some View"
            restorable="true">
      </view>
      <view
            class="com.starterkit.views.TaskView"
            id="com.starterkit.views.TaskView"
            name="Tasks"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.views.perspective1">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="top"
               id="com.starterkit.views.views.SampleView">
         </view>
         <view
               id="com.starterkit.views.view1"
               minimized="false"
               ratio="0.67"
               relationship="right"
               relative="com.starterkit.views.views.SampleView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.starterkit.views.archive">
         <view
               id="com.starterkit.views.TaskView"
               ratio="0.75"
               relationship="top"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
         <view
               id="com.starterkit.views.SomeView"
               minimized="false"
               ratio="0.65"
               relationship="right"
               relative="com.starterkit.views.TaskView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.starterkit.views.PerspectiveFactory1"
            id="com.starterkit.views.perspective1"
            name="Starterkit">
      </perspective>
      <perspective
            class="com.starterkit.views.ArchivePerspective"
            id="com.starterkit.views.archive"
            name="Archive">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <command
               commandId="com.starterkit.views.command1"
               label="MmMmM"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.starterkit.views.command1"
            name="Action">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.starterkit.views.handlers.Action"
            commandId="com.starterkit.views.command1">
      </handler>
   </extension>

</plugin>
